<% if @store.code.include?("faire") %>
  <div class="card mb-4">
    <div class="card-header">
      <h1 class="card-title mb-0 h5">
        <%= Spree.t('faire.faire') %>
      </h1>
    </div>
    <div class="card-body">
      <%= f.field_container :faire_api_key, class: ['form-group'] do %>
        <%= f.label :faire_api_key, Spree.t(:faire_api_key) %>
        <%= f.text_field :faire_api_key, class: 'form-control' %>
        <%= f.error_message_on :faire_api_key %>
      <% end %>
      <%= f.field_container :user_id, class: ['form-group'] do %>
        <%= f.label :user_id, Spree.t(:user) %>
        <%= f.collection_select :user_id, @users, :id, :email, { include_blank: true }, { class: 'select2-clear w-100', data: { placeholder: Spree.t(:select_a_user) }, aria: {label: Spree.t(:user) }} %>
      <% end %>
    </div>
  </div>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:sync_inventory),
    spree.sync_inventory_admin_store_path,
    method: :put,
    icon: 'upload'
  %>
<% end %>
